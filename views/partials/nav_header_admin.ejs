<nav class="nav">
    <ul class="nav__menu">
        <% states.forEach( state => { %>
            <li class="nav__menu-title"><%= state %>
                <br/>
                <ul class="nav__dropdown">
                    <% regions.forEach( region => { %>
                        <% if (region.state === state) { %>
                            <li class="nav__dropdown-title"><a href="/<%= region.region %>"><%= region.region %></a></li>
                        <% } %>
                    <% }) %>
                </ul>
            </li>
        <% }) %>
    </ul>
    <a href="/admin/region-form"><button class="nav__menu-add-button">Add / Remove Region</button></a>
</nav>