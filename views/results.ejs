<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real Estate Website</title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <header>
        <%- include('./partials/nav_header.ejs') %>
    </header>
        <section>
            <div class="region__wrapper">
                <h1 class="region__title">Result:</h1>
                <p class="region__description">We found <%= results.length %> location(s)</p>
                <% if (results.length === 0) { %>
                    <p class="region__description region__description-not-found">Please try a different search.</p>
                <% } else { %>
                    <div class="region__location-grid">
                        <% results.forEach( result => { %>
                            <div class="region__location-container">
                                <a href="/<%= result.region %>/<%= result.location %>">
                                    <img class="region__location-image" src="<%= result.imageLink %>" alt="" />
                                    <h3 class="region__location-title"><%= result.location %></h3>
                                </a>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </section>
    <%- include('./partials/footer.ejs') %>
</body>

</html>