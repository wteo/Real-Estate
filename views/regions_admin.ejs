<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real Estate Website</title>
    <script src="/js/see_more_button.js" defer></script>
    <script src="/js/delete_modal.js" defer></script>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <header>
        <%- include('./partials/nav_header_admin.ejs') %>
    </header>
    <section class="about__wrapper">
        <div class="about__description-container">
            <h1 class="about__title">About Us</h1>
            <p class="about__description">
                We aim to be the top website in Australia on real estates. Can't find your favourite surburbs? Let us know! And we'll commit to adding this to our website.
            </p>
            <br/>
            <button class="about__button">Contact Us</button>
        </div>
    </section>
    <% regions.forEach( region => { %>
        <section>
            <div class="region__wrapper">
                <h1 class="region__title"><%= region.region %></h1>
                <p class="region__description"><%= region.description %></p>
                <div class="region__location-grid" data-region="<%= region.region %>">
                    <% region.locations.forEach( location => { %>
                        <div class="region__location-container">
                            <a href="/<%= region.region %>/<%= location.location %>/admin">
                                <img class="region__location-image" src="<%= location.imageLink %>" alt="" />
                                <h3 class="region__location-title"><%= location.location %></h3>
                            </a>
                        </div>
                    <% }) %>
                </div>
                <br/>
                <br/>
                <div class="buttons-wrapper">
                    <form class="region__admin-delete-form" action="/admin/delete-region" method="POST">
                        <input type="hidden" name="region" value="<%= region.region %>" />
                        <button class="admin-delete-button">Delete</button>
                    </form>
                    <a href="/<%= region.region %>/admin/update-region-form"><button>Update Region</button></a>
                </div>
            </div>
            <% if (region.locations.length > 0) { %>
                <div id="delete__modal" class="modal">
                    <div class="modal__content">
                        <span class="modal__close-button">&times;</span>
                        <p class="modal__message">You must delete all existing locations in this region first before you can delete it.</p>
                        <div class="modal__buttons-wrapper">
                            <button id="modal__cancel-delete-button">OK, got it!</button>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div id="delete__modal" class="modal">
                    <div class="modal__content">
                        <span class="modal__close-button">&times;</span>
                        <p class="modal__message">Are you sure you want to delete this region?</p>
                        <p class="modal__message">This will also remove any pages and / or articles related to it.</p>
                        <div class="modal__buttons-wrapper">
                            <button id="modal__confirm-delete-button">Yes</button>
                            <button id="modal__cancel-delete-button">Cancel</button>
                        </div>
                    </div>
                </div>
            <% } %>
        </section>
    <% }) %>
    <%- include('./partials/footer.ejs') %>
</body>

</html>

